<style>
    .container {
        padding:  50px;
        min-height: 450px
    }

    .h4 {
        font-family: 'Poppins', sans-serif
    }
    
    
    a:hover {
        text-decoration: none;
        color: #444
    }
    
    div.btn,
    button.btn {
        background-color: rgb(92, 96, 245);
        color: #eee
    }
    
    div.btn:hover,
    button.btn:hover {
        background-color: rgb(92, 96, 245)d7
    }

    
    nav {
        float: left
    }
    
    .wrapper {
        width: 85%;
        margin: 20px auto;
        box-shadow: 1px 1px 30px 10px rgba(250, 250, 250, 0.8)
    }
    
    .h3 {
        padding-top: 40px;
        font-size: 34px
    }
    
    label {
        display: block;
        font-size: 0.8rem;
        font-weight: 700
    }
    
    input {
        border: none;
        outline: none;
        border-bottom: 2px solid #ddd;
        width: 100%;
        padding-bottom: 10px
    }
    
    .wrapper {
        clear: both
    }
    
    #country {
        border: none;
        outline: none;
        width: 100%;
        padding-bottom: 12px;
        border-bottom: 2px solid #ddd
    }
    
    .wrapper .col-md-6:hover label {
        color: rgb(92, 96, 245)
    }
    
    .wrapper .col-md-6:hover input,
    .wrapper .col-md-6:hover #country {
        border-color: rgb(92, 96, 245);
        cursor: pointer
    }
    
    .wrapper .col-md-6 input:focus {
        border-color: rgb(92, 96, 245)
    }
    
    .option {
        position: relative;
        padding-left: 30px;
        display: block;
        cursor: pointer;
        color: #888
    }
    
    .option input {
        display: none
    }

    @media(max-width: 767px) {
        div.btn {
            width: 100%
        }
        .h3 {
            font-size: 25px
        }
        .container {
            padding: 20px;
            margin-left: 0px
        }
    }
    
    @media(max-width: 374px) {
        .h3 {
            font-size: 21px
        }
    }
</style>
<div class="container bg-white mt-sm-5 mb-5">
    <form onsubmit="return letRegister(this)" class="wrapper d-flex justify-content-center flex-column px-md-5 px-1">
        <div class="h3 text-center font-weight-bold">Tạo tài khoản nhân sự mới</div>
        <div class="row my-4">
            <div class="col-md-6"> <label>Tên đầy đủ</label> <input name="fullname" type="text" autocomplete="off" placeholder="e.g., Nguyen Van Yeah"> </div>
            <div class="col-md-6 pt-md-0 pt-4"> <label>Tên đăng nhập</label> <input name="username" type="text" placeholder="e.g., abcde"> </div>
        </div>
        <div class="row my-md-4 my-2">
            <div class="col-md-6"> <label>Mật khẩu</label> <input type="password" name="password" placeholder="e.g., nKhsb@213jT" </div>
        </div>
        <div class="row my-md-4 my-2">
            <div class="col-md-6"> <label>Chức vụ</label> <select name="role" id="country">
                    <option value="1">Nhân viên</option>
                    <option value="2">Quản lý</option>
                </select> </div>

        <div class="d-flex justify-content-end"> <button class="btn" type="submit" name="submit">Tạo</button> </div>
    </div>
</form>
<script>
    function letRegister(form) {
    form.submit.setAttribute("disabled", "disabled");
    form.submit.innerHTML = " <span> Loading... </span> ";
    var ajax = new XMLHttpRequest();
    ajax.open('POST', 'add', true);
    ajax.onreadystatechange =
        function() {
            if (this.readyState == 4 && this.status == 200) {
                form.submit.removeAttribute("disabled");
                form.submit.innerHTML = " <span> Tạo </span > ";
                var response = JSON.parse(this.responseText);
                alert(response.message);
                if (response.status == "success") {
                    window.location.href = "/";
                } else {
                    alert(response.message);
                }
            }
        };
    ajax.send(new FormData(form));
    return false;
  }
</script>